<!DOCTYPE html>
<html>
<head>
    <title>Index</title>
    <link href="bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="container">
    <h1><a asp-controller="Home" asp-action="Login">Login</a></h1>
<div class="row">
        <div class="col">
            <h2>Log In</h2>

            <form id="identity-form">
                <div class="mb-3">
                    <label for="userName" class="form-label">UserName</label>
                    <input type="text" class="form-control" id="userName" value="user2@sorodich.com">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" value="">
                </div>

                <button id="login" type="button" class="btn btn-secondary">Получить токен</button>
            </form>
            <div class="mt-3">

                <div id="token" class="text-break">
                    no token
                </div>
            </div>
        </div>
        <div class="col">
            <h2>Messages</h2>
            <form id="send-form" class="invisible">
                <div class="mb-3">
                    <label for="messageText" class="form-label">Message text:</label>
                    <input type="text" class="form-control" id="messageText" value="This is message from JavaScript client">
                </div>
                <button id="send" type="button" class="btn btn-primary">Send</button>
            </form>
            <div>
                <ul id="messageList"></ul>
            </div>
        </div>
        <div class="col">
            <h2>Users</h2>
            <div class="btn-group invisible" role="group" id="userToolbar">
                <button id="connect" type="button" class="btn btn-success">Connect</button>
                <button id="disconnect" type="button" class="btn btn-danger" disabled>Disconnect</button>
            </div>
            <div id="userList">
            </div>
        </div>
        <div id="result"></div>
        <input type='button' id="submit" value='Поиск' />
    </div>

    <script src="~/iQuery.v3.3.1.js"></script>
    <script src="microsoft-signalr/signalr.min.js"></script>
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <script src="app.js"></script>
</body>
</html>